#articles
  - articles = @pages.find(:all, :in_directory => @page.dir, :recursive => true, :sort_by => "created_at", :reverse => true, :layout => 'article')
  %table
    - articles.each do |page|
      %tr
        %td= link_to page.title, page.url
        %td= page.created_at

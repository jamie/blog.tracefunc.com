<% wrap_layout :layout do %>
  <div class="article hentry">
    <h3 class="entry-title"><%= link_to current_article.title, current_article %></a></h3>
    <div class="meta">
      <span class="date"><%= format_date current_article.date %></span>
      <% if current_article.tags %>
        | Tags:
        <% for tag in current_article.tags %>
          <a href="/tags/#<%= tag %>"><%= tag %></a>
        <% end %>
      <% end %>
    </div>
    <div class="entry-content">
      <%= yield %>
    </div>
  </div>
  <hr/>

  <div id="disqus_thread"></div>
  <script type="text/javascript" src="http://disqus.com/forums/tracefunc/embed.js"></script>
  <noscript>
    <a href="http://tracefunc.disqus.com/?url=ref">View the discussion thread</a>
  </noscript>
  <a href="http://disqus.com" class="dsq-brlink">blog comments powered by <span class="logo-disqus">Disqus</span></a>
<% end %>

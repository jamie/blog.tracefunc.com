---
layout: default
---

<% if pages_linking_here.size > 0 %>
  <div class="float-right mx-4 px-4 pb-2 border-solid border-l-2 border-gray-500">
    <h4 class="pt-0">Pages Linking Here</h4>
    <ul>
      <% pages_linking_here.each do |r| %>
        <li><a class="wikilink" href="/<%= r.path %>"><%=h r.metadata.dig(:page, :title) %></a></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div id="content" class="w-full px-4 md:px-6 text-xl text-gray-800 leading-normal" style="font-family:Georgia,serif;">
  <div id="article">
    {% render "notable", note: page %}
  </div>
</div>
